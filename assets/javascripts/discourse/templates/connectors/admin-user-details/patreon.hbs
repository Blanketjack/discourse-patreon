<section class='details'>
  <h1>{{i18n 'patreon.title'}}</h1>
  <div class='display-row'>
    <div class='field'>{{i18n 'subscription.field.id'}}</div>
    <div class='value'>{{model.subscription.external_id}}</div>
  </div>
  {{#if model.patreon_email_exists}}
  <div class='display-row'>
    <div class='field'>{{i18n 'subscription.field.email'}}</div>
    <div class='value'>
      {{#if patreon_email}}
        {{patreon_email}}
      {{else}}
        {{d-button
          class="btn-default"
          action="checkPatreonEmail"
          actionParam=model icon="far-envelope"
          label="admin.users.check_email.text"
          title="admin.users.check_email.title"}}
      {{/if}}
    </div>
  </div>
  {{/if}}
  <div class='display-row'>
    <div class='field'>{{i18n 'subscription.field.plan_name'}}</div>
    <div class='value'>{{subscription.plan.name}}</div>
  </div>
  {{#if model.subscription.amount}}
  <div class='display-row'>
    <div class='field'>{{i18n 'subscription.field.amount'}}</div>
    <div class='value'>{{model.subscription.amount}}</div>
  </div>
  {{/if}}
  {{#if model.subscription.total_amount}}
  <div class='display-row'>
    <div class='field'>{{i18n 'subscription.field.total_amount'}}</div>
    <div class='value'>{{model.subscription.total_amount}}</div>
  </div>
  {{/if}}
  {{#if model.subscription.last_payment_at}}
  <div class='display-row'>
    <div class='field'>{{i18n 'subscription.field.last_payment_at'}}</div>
    <div class='value'>{{{format-date model.subscription.last_payment_at}}}</div>
  </div>
  {{/if}}
  {{#if model.subscription.last_payment_status}}
  <div class='display-row'>
    <div class='field'>{{i18n 'subscription.field.last_payment_status'}}</div>
    <div class='value'>{{{format-date model.subscription.last_payment_status}}}</div>
  </div>
  {{/if}}
  <div class='display-row'>
    <div class='field'>{{i18n 'patreon.field.more_details.label'}}</div>
    <div class='value'><a target="_blank" href="{{patron_url}}">{{d-icon 'external-link-alt'}}</a></div>
    <div class="controls">
      {{#if patreon_email}}
        {{i18n 'patreon.field.more_details.help_text.email_available'}}
      {{else}}
        {{i18n 'patreon.field.more_details.help_text.email_not_available'}}
      {{/if}}
    </div>
  </div>
</section>
